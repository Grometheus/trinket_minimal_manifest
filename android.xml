<manifest>
  <!-- Remote & default -->
  <remote
      name="aosp"
      fetch="https://android.googlesource.com"
      review="https://android-review.googlesource.com/"
  />
  <default
      revision="refs/tags/android-12.1.0_r4"
      remote="aosp"
      sync-j="4"
  />

  <!-- Core build system -->
  <project path="build/make" name="platform/build" groups="pdk" />
  <project path="build/blueprint" name="platform/build/blueprint" groups="pdk" />
  <project path="build/soong" name="platform/build/soong" groups="pdk" />
  <project path="build/soong/scripts" name="platform/build/soong/scripts" groups="pdk" />
  <project path="build/soong/genrule" name="platform/build/soong/genrule" groups="pdk" />

  <!-- Essential prebuilts (tools & go environment) -->
  <project path="prebuilts/build-tools" name="platform/prebuilts/build-tools" groups="pdk" clone-depth="1" />
  <project path="prebuilts/go/linux-x86" name="platform/prebuilts/go/linux-x86" groups="pdk" clone-depth="1" />
  <project path="prebuilts/sdk" name="platform/prebuilts/sdk" groups="pdk" clone-depth="1" />

  <!-- Recovery core -->
  <project path="bootable/recovery" name="platform/bootable/recovery" groups="pdk" />

  <!-- System base needed for recovery -->
  <project path="system/core" name="platform/system/core" groups="pdk" />
  <project path="system/vold" name="platform/system/vold" groups="pdk" />
  <project path="system/sepolicy" name="platform/system/sepolicy" groups="pdk" />
  <project path="system/libufdt" name="platform/system/libufdt" groups="pdk" />
  <project path="system/libvintf" name="platform/system/libvintf" groups="pdk" />
  <project path="system/tools/mkbootimg" name="platform/system/tools/mkbootimg" groups="pdk" />

  <!-- Minimal hardware interfaces required for decryption, slots, health, etc. -->
  <project path="hardware/interfaces/boot" name="platform/hardware/interfaces/boot" />
  <project path="hardware/interfaces/health" name="platform/hardware/interfaces/health" />
  <project path="hardware/interfaces/keymaster" name="platform/hardware/interfaces/keymaster" />
  <project path="hardware/interfaces/power" name="platform/hardware/interfaces/power" />
  <project path="hardware/interfaces/vibrator" name="platform/hardware/interfaces/vibrator" />

  <!-- External libraries normally used by recovery -->
  <project path="external/zlib" name="platform/external/zlib" />
  <project path="external/libpng" name="platform/external/libpng" />
  <project path="external/freetype" name="platform/external/freetype" />
  <project path="external/squashfs-tools" name="platform/external/squashfs-tools" />

</manifest>
